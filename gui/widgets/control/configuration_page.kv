#:kivy 1.0

<ConfigurationPage>:
    size_hint: 1,1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    
    TabbedPanelItem:
        text: 'tab1'
        BoxLayout:
            orientation: 'vertical'
            Image:
                id: camera
                source: 'brainiac.jpg'
                size_hint_x: 1
                size_hint_y: .9
            Button:
                text: 'Button that does nothing'
                size_hint_x: 1
                size_hint_y: .1
                on_press: root.dostart()

    TabbedPanelItem:
        text: 'tab2'
        BoxLayout:
            Image:
                id: camera2
                size_hint_x: 1
                size_hint_y: .9
            Button:
                text: 'Button that does nothing'
    TabbedPanelItem:
        text: 'tab3'
        RstDocument:
            text:
                '\\n'.join(("Hello world", "-----------",
                "You are in the third tab."))